<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/tab_todo_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:divider="@null">

    </ListView>

    <utils.ArcMenu
        android:id="@+id/tab_todo_arcMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:position="right_bottom"
        app:radius="80dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="New"
            android:background="@drawable/arc_new_shape"
            android:src="@drawable/arc_new"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="Delete"
            android:background="@drawable/arc_new_shape"
            android:src="@drawable/arc_delete"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arc_shape"
            android:src="@drawable/arc_main"/>
    </utils.ArcMenu>

</android.support.constraint.ConstraintLayout>